{
  "name": "vaultkeeper",
  "version": "0.0.0",
  "description": "Unified, policy-enforced secret storage across OS backends",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/vaultkeeper-public.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "node -e \"import('node:fs').then(fs=>fs.rmSync('dist',{recursive:true,force:true}))\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "check:typecheck": "tsc --noEmit",
    "check:lint-ts": "eslint .",
    "check:api-report": "api-extractor run",
    "check": "pnpm check:typecheck && pnpm check:lint-ts && pnpm check:api-report",
    "generate:api-report": "api-extractor run --local"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "jose": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@microsoft/api-documenter": "^7.0.0",
    "@microsoft/api-extractor": "^7.57.2",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-n": "^17.0.0",
    "eslint-plugin-security": "^3.0.0",
    "jiti": "^2.6.1",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}